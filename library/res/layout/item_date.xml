<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:background="@drawable/bg_rect_border"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/item_date_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_opacity_99"
        android:textSize="11dp"/>

    <TextView
        android:id="@+id/item_date_tv_detail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"/>

    <TextView
        android:id="@+id/item_date_tv_detail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"/>


    <TextView
        android:id="@+id/item_date_tv_detail3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"/>


</LinearLayout>